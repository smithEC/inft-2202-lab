<div class="container">
  <h1>Search</h1>
  <hr>

  <i id="spinner" class="fa-solid fa-spinner fa-spin-pulse" style="font-size: 3em;"></i>

  <div id="message-box" class="alert alert-warning d-none">
    The shop is currently closed.
  </div>

  <div id="dropdown" class="dropdown d-none" style="margin-bottom: 1em;">
    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
      Items Per Page
    </button>
    <ul class="dropdown-menu">
      <li><button id="button-3" class="dropdown-item">3</button></li>
      <li><button id="button-6" class="dropdown-item">6</button></li>
      <li><button id="button-9" class="dropdown-item">9</button></li>
    </ul>
  </div>

  <nav id="pagination" class="d-none" aria-label="Product List Navigation">
    <ul class="pagination"></ul>
  </nav>

  <div id="card-display" class="row g-3"></div>
</div>

<!-- Modal -->
<div class="modal" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete Product</h5>
      </div>
      <div class="modal-body">
        Are you sure?
      </div>
      <div class="modal-footer" id="confirmation">
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger">
          Delete
          <i id="delete-spinner" class="d-none fa-solid fa-spinner fa-spin-pulse"></i>
        </button>
      </div>
    </div>
  </div>
</div>